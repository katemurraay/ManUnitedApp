<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    android:layout_width="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:titleTextColor="@color/white"
        app:theme="@style/MyActionBar"
        android:id="@+id/tbProfile"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="1dp"
        android:padding="2dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/tv_empty" />

            <TextView
                android:id="@+id/tvName"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="@string/tv_empty"
                android:textColor="@color/crimson"
                android:textStyle="bold"
                android:textSize="25sp" />








<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_margin="10dp"
    android:background="@drawable/layout_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

       >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_number"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:theme="@style/FontSizeMedium" />
        <TextView
            android:id="@+id/tvPlayerNo"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/tv_empty"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:theme="@style/FontSizeLarge" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/tv_age"
                android:textAlignment="center"
                android:theme="@style/FontSizeMedium" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/tv_empty"
                android:theme="@style/FontSizeLarge" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/tv_appearances"
                android:theme="@style/FontSizeMedium" />

            <TextView
                android:id="@+id/tvAppearances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:theme="@style/FontSizeLarge"
                android:textStyle="bold"
                android:text="@string/tv_empty" />
        </LinearLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_margin="10dp"
    android:background="@android:color/darker_gray"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/tv_position"
                android:theme="@style/FontSizeSmall"/>

            <TextView
                android:id="@+id/tvPosition"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="@string/tv_empty"
                android:theme="@style/FontSizeSmall" />
        </TableRow>
<TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="@string/tv_dob"
                android:theme="@style/FontSizeSmall" />

            <TextView
                android:id="@+id/tvDOB"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="@string/tv_empty"
                android:theme="@style/FontSizeSmall" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="@string/tv_country"
                android:theme="@style/FontSizeSmall" />

            <TextView
                android:id="@+id/tvCountry"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="@string/tv_empty"
                android:theme="@style/FontSizeSmall" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/tv_joined"
                android:theme="@style/FontSizeSmall" />

            <TextView
                android:id="@+id/tvJoined"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/tv_empty"
                android:theme="@style/FontSizeSmall"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnLastMatch"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/match_button_shape"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:theme="@style/FontSizeSmall"
                android:text="@string/btn_last_match" />
        </TableRow>
    </TableLayout>
</LinearLayout>



</LinearLayout>

    </ScrollView>
</LinearLayout>